{
    "include": [
        "src/**/*.ts",
        ".env.d.ts"
    ],

    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "src",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "strict": true,

        "paths": {
            "@/*": ["*"],
            "@_/*": ["_/*"]
        }
    }
}
